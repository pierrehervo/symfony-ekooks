{% extends 'base.html.twig' %}

{% block title %}Hello RecetteController!{% endblock %}

{% block body %}
    <!-- DEBUT DE LA PAGE RECETTE -->
    <section class="recette">
        <img src="./images/plat2.jpg" alt="">
        <i id="iconecoeur_recette" class="fas fa-heart float-right"></i>

        <div class="iconesnoteetoiles">
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="fas fa-star"></i>
            <i class="far fa-star"></i>
        </div>

        <!--CHEF DE LA RECETTE-->
        <div class="divchefetoile">
            <img id="imagechef" src="./images/chefthierrymarx.jpg" alt="">
            <div>
                <h4>Thierry Marx <img id="france3" src="./images/drapeau_france.jpg" alt="">  </h4>
                <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit.
