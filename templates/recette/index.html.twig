            </div>

        </div>
        <!--FIN PREPARATION RECETTE-->
        <!--VIDEO-->
        <iframe width="315" height="315" src="https://www.youtube.com/embed/HxSlPT200iQ" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

        <i id="arrowup" class="fas fa-arrow-up"></i>

    </section>
    <!--FIN DE LA PAGE RECETTE-->
{% endblock %}