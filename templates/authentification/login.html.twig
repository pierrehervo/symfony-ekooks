{% extends 'base.html.twig' %}

{% block title %}se connecter{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.message | trans }}</div>
    {% endif %}

    <form method="post">

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authentification') }}" />

        <div class="form-group">
            <label for="nom">Nom:</label>
            <input type="text" name="_nom" id="nom" class="form-control"
                   placeholder="nom" value="{{ nom }}" autofocus />
        </div>

        <div class="form-group">
            <label for="password">Mot de passe:</label>
            <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" />
        </div>

        <div class="form-group">
            <input type="submit" class="waves-effect waves-light btn" value="Se connecter" />
        </div>
    </form>
{% endblock %}
