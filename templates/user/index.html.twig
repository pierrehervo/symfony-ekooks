{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <main class="container">
        <section class="profil">
            
            <h5>PHOTO DE PROFIL</h5>
            <article class="profil">
                <div class="profil">
                    <div class="img">
                        <i class="material-icons">account_circle</i>
                    </div>
                        <button class="btn waves-effect waves-light" type="submit" name="action">Changer l'image de profil</button>
                        <p class="smalltext"><small>images au format JPEG accept√©es</small></p>
                </div>
            </article>
        </section>

            <h5>IDENTIFIANT</h5>
       
           
       
            <form class="col s12">
                <div class="row collapse-body">
                    <div class="input-field col s6">
                        <input id="first_name" type="text" class="validate">
                        <label for="nom">{{user.nom}}</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="last_name" type="text" class="validate">
                        <label for="prenom">{{user.prenom}}</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="adress" type="text" class="validate">
                        <label for="adresse">{{user.adresse}}</label>
                        <button class="btn waves-effect waves-light" type="submit" name="action">Changer l'adresse</button>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email" class="validate">
                        <label for="email">{{user.email}}</label>
                    </div>
                </div>
            </div>


             <h5>MOT DE PASSE</h5>

             <div class="row">
                <div class="input-field col s6">
                  <input id="first_name" type="text" class="validate">
                  <label for="first_name">Mot de passe actuel</label>
                </div>
             </div>
             <div class="row">
                <div class="input-field col s6">
                  <input id="first_name" type="text" class="validate">
                  <label for="first_name">Nouveau mot de passe</label>
                </div>
             </div>
             <div class="row">
                <div class="input-field col s6">
                  <input id="first_name" type="text" class="validate">
                  <label for="first_name">Confirmation du nouveau mot de passe</label>
                </div>
             </div>
             <button class="btn waves-effect waves-light" type="submit" name="action">Changer de mot de passe</button>
            </form>
          </div>
    </main>
{% endblock %}
